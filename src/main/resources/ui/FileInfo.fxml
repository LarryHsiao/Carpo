<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?><?import com.jfoenix.controls.JFXTextField?><?import javafx.scene.layout.HBox?><?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.silverhetch.carpo.javafx.FileInfoView">
    <JFXTextField fx:id="fileName"
        editable="false"
        maxWidth="Infinity" />

    <HBox style="-fx-padding: 16 0 16 0">
        <JFXTextField HBox.hgrow="ALWAYS"
            onKeyPressed="#tagNameKey"
            maxWidth="Infinity"
            fx:id="tagName" />
        <JFXButton text="%General.create"
            onMouseClicked="#createTag" />
    </HBox>

    <fx:include VBox.vgrow="ALWAYS"
        source="TagList.fxml"
        maxWidth="Infinity"
        fx:id="tagList" />
</VBox>
